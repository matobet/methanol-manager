<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <ui:with field="constants" type="cz.muni.fi.pa165.methanolmanager.frontend.client.i18n.ApplicationConstants" />

  <ui:style>
    .loginForm {
      padding-top: 20px;
      max-width: 300px;
      margin: auto;
    }
    .heading {
      text-align: center;
    }
  </ui:style>

  <b:Row addStyleNames="{style.loginForm}">
    <b:Row>
      <b:Heading size="H1" text="{constants.loginRequired}" addStyleNames="{style.heading}" />
    </b:Row>
    <b:Row>
      <b:Form type="HORIZONTAL">
        <b:FieldSet>
          <b:FormGroup>
            <b:FormLabel for="nameEditor" text="{constants.name}" />
            <b:TextBox ui:field="nameEditor" b:id="nameEditor" focus="true" />
          </b:FormGroup>
          <b:FormGroup>
            <b:FormLabel for="passwordEditor" text="{constants.password}" />
            <b:Input ui:field="passwordEditor" b:id="passwordEditor" type="PASSWORD" />
          </b:FormGroup>

          <b:Button ui:field="loginButton" type="PRIMARY" text="{constants.login}" pull="RIGHT" />
        </b:FieldSet>
      </b:Form>
    </b:Row>
  </b:Row>

</ui:UiBinder>