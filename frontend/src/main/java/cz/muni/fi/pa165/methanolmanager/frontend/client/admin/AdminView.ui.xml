<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">
<ui:with field="constants" type="cz.muni.fi.pa165.methanolmanager.frontend.client.i18n.ApplicationConstants" />
    <b:Row>
        <b:Column size="XS_12">
            <b:TabPanel tabPosition="LEFT">
                <b:NavTabs>
                    <b:TabListItem dataTarget="#producersTab" text="{constants.users}" />
                </b:NavTabs>
                <b:TabContent width="80%" >
                    <b:TabPane b:id="producersTab">
                        <b:Row>
                            <b:Panel>
                                <b:Row marginLeft="30">
                                    <b:Heading size="H3" text="{constants.adminUsersHeader}"/>
                                </b:Row>
                            </b:Panel>
                            <b:Panel>
                                <b:PanelBody>
                                    <b:Heading size="H4" text="{constants.addUser}"/>

                                    <b:Form type="HORIZONTAL">
                                         <b:FieldSet>
                                            <b:FormGroup >
                                                <b:FormLabel for="nameAdd" text="{constants.name}" />
                                                <b:TextBox ui:field="nameAdd" b:id="nameAdd" />
                                                <b:FormLabel for="passwdAdd" text="{constants.passwd}" />
                                                <b:TextBox ui:field="passwdAdd" b:id="passwdAdd" />
                                                <b:FormLabel for="passwdRepAdd" text="{constants.passwdRep}" />
                                                <b:TextBox ui:field="passwdRepAdd" b:id="passwdRepAdd" />
                                            </b:FormGroup>
                                         </b:FieldSet>
                                    </b:Form>
                                    <b:Row>
                                        <b:Button ui:field="createButton" text="{constants.create}" icon="PLUS" type="SUCCESS" width="100%" />
                                    </b:Row>
                                </b:PanelBody>
                            </b:Panel>

                            <b:Panel>
                                <b:PanelBody>
                                    <b:Heading size="H4" text="{constants.removeUser}"/>

                                    <b:Form type="HORIZONTAL">
                                        <b:FieldSet>
                                            <b:FormGroup >
                                                <b:FormLabel for="userRemove" text="{constants.name}" />
                                                <b:ListBox ui:field="userRemove" b:id="userRemove" />
                                            </b:FormGroup>
                                        </b:FieldSet>
                                    </b:Form>
                                    <b:Row>
                                        <b:Button ui:field="removeButton" text="{constants.delete}" icon="TRASH_O" type="DANGER" width="100%" />
                                    </b:Row>
                                </b:PanelBody>
                            </b:Panel>
                        </b:Row>
                    </b:TabPane>
                </b:TabContent>
            </b:TabPanel>
        </b:Column>
    </b:Row>
</ui:UiBinder>
