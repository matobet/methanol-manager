<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
  <ui:with field="constants" type="cz.muni.fi.pa165.methanolmanager.frontend.client.i18n.ApplicationConstants" />

  <b:Row>
    <b:Column size="XS_12">
      <b:TabPanel tabPosition="LEFT">
        <b:NavTabs>
          <b:TabListItem active="true" dataTarget="#storesTab" text="{constants.stores}" />
          <b:TabListItem dataTarget="#producersTab" text="{constants.producers}" />
        </b:NavTabs>
        <b:TabContent width="80%">
          <b:TabPane active="true" b:id="storesTab">
            <b:Panel>
              <b:PanelHeader>
                <b:Heading size="H3" text="{constants.stores}" />
              </b:PanelHeader>
              <b:PanelBody>
                <b.gwt:CellTable ui:field="storesTable" hover="true" bordered="true" />
                <b:Pagination ui:field="storesPagination" />
              </b:PanelBody>
            </b:Panel>
          </b:TabPane>
          <b:TabPane b:id="producersTab">
            <b:Heading size="H1" text="Here be producers" />
          </b:TabPane>
        </b:TabContent>
      </b:TabPanel>
    </b:Column>
  </b:Row>
</ui:UiBinder>